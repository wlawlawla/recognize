<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recognize.device.mapper.DeviceInfoMapper">

    <!-- auto generated map -->
    <resultMap id="BaseResultMap" type="com.recognize.device.entity.DeviceInfoEntity">
        <id column="device_id" jdbcType="BIGINT" property="deviceId"/>
        <id column="device_name" jdbcType="VARCHAR" property="deviceName"/>
        <id column="device_num" jdbcType="VARCHAR" property="deviceNum"/>
        <id column="device_rfid" jdbcType="VARCHAR" property="deviceRFID"/>
        <id column="station_id" jdbcType="BIGINT" property="stationId"/>
        <id column="order_num" jdbcType="BIGINT" property="orderNumber"/>
        <id column="is_del" jdbcType="BIGINT" property="del"/>
        <id column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <id column="create_by" jdbcType="BIGINT" property="createBy"/>
        <id column="updt_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <id column="updt_by" jdbcType="BIGINT" property="updateBy"/>
    </resultMap>

    <select id="findByDeviceIdIn" resultMap="BaseResultMap">
        select s.* FROM device_info s where s.device_id in
        <foreach collection="deviceIdList" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
        and s.is_del = 0
    </select>

    <select id="findById" resultMap="BaseResultMap">
        select s.*
        FROM device_info s
        where s.device_id = #{id}
          and s.is_del = 0
    </select>
</mapper>
