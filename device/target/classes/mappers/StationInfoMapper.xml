<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.recognize.device.mapper.StationInfoMapper">

    <!-- auto generated map -->
    <resultMap id="BaseResultMap" type="com.recognize.device.entity.StationInfoEntity">
        <id column="station_id" jdbcType="BIGINT" property="stationId"/>
        <id column="station_name" jdbcType="VARCHAR" property="stationName"/>
        <id column="is_del" jdbcType="BIGINT" property="del"/>
        <id column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <id column="create_by" jdbcType="BIGINT" property="createBy"/>
        <id column="updt_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <id column="updt_by" jdbcType="BIGINT" property="updateBy"/>
    </resultMap>

    <select id="findByStationIdIn" resultMap="BaseResultMap">
        select s.* FROM station_info s where s.station_id in
        <foreach collection="stationIdList" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
        and s.is_del = 0
    </select>

    <select id="findById" resultMap="BaseResultMap">
        select s.*
        FROM station_info s
        where s.station_id = #{id}
        and s.is_del = 0
    </select>

    <select id="findByStationName" resultMap="BaseResultMap">
        select s.*
        FROM station_info s
        where s.station_name = #{stationName}
        and s.is_del = 0
    </select>


</mapper>
